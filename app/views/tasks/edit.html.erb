<h2>Edit Task</h2>


<%= simple_form_for @task, :html =>  { :multipart => true} do |t| %>
	<%= t.select :category_id, @categories%>
	<%= t.input :title, label: "Task Title"  %>
	<%= t.input :description  %>
	<%= t.input :deadline  %>
	<%= t.button :submit%>

<% end %>
    
<%= link_to '  Back to task', task_path(@task)%>
